{
  "name": "template-static-site",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "run-p watch:ejs watch:assets",
    "build": "run-s clean compile:ejs build:assets",
    "compile:ejs": "ejs-cli -b src/templates/ \"/**/[!_]*.ejs\" -o dist/",
    "watch:ejs": "chokidar \"src/templates/\" -c \"npm run compile:ejs\" --initial",
    "build:assets": "rspack build --mode=production",
    "watch:assets": "rspack dev",
    "format:scss": "stylelint --fix \"**/*.scss\"",
    "format:ts": "biome check --write src/ts/",
    "format:all": "run-p format:scss format:ts",
    "clean": "rimraf dist",
    "predev": "npm run clean"
  },
  "volta": {
    "node": "24.13.0",
    "npm": "11.6.2"
  },
  "browserslist": [
    "> 0.2%, not dead",
    "> 0.2% in JP, not dead",
    "not ios < 15",
    "safari > 15, ios > 15"
  ],
  "dependencies": {
    "@s.a.g.a/reset-css": "^0.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@rspack/cli": "^1.7.6",
    "@rspack/core": "^1.7.6",
    "@types/node": "^24.10.10",
    "autoprefixer": "^10.4.24",
    "chokidar-cli": "^3.0.0",
    "ejs-cli": "^2.2.3",
    "npm-run-all2": "^8.0.4",
    "postcss-loader": "^8.2.0",
    "postcss-sort-media-queries": "^5.2.0",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "sass-loader": "^16.0.7",
    "stylelint": "^17.3.0",
    "stylelint-config-recess-order": "^7.6.1",
    "stylelint-config-standard-scss": "^17.0.0",
    "stylelint-order": "^7.0.1",
    "stylelint-prettier": "^5.0.3",
    "typescript": "^5.9.3"
  }
}
