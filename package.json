{
  "name": "template-static-site",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "run-p watch:ejs watch:css watch:ts",
    "build": "run-s clean compile:ejs compile:css compile:ts min:css delete:map",
    "compile:ejs": "ejs-cli -b src/templates/ \"/**/*.ejs\" -o dist/ -e src/templates/include",
    "watch:ejs": "chokidar \"src/templates/\" -c \"npm run compile:ejs\" --initial",
    "sass": "sass src/scss/style.scss:dist/assets/css/style.css --style=compressed --source-map-urls=relative",
    "postcss": "postcss dist/assets/css/style.css -u autoprefixer postcss-sort-media-queries -o dist/assets/css/style.css",
    "compile:css": "run-s sass postcss",
    "watch:css": "chokidar \"src/scss/\" --command \"npm run compile:css\" --initial",
    "compile:ts": "rspack build --mode=production",
    "watch:ts": "rspack dev",
    "format:scss": "stylelint --fix \"**/*.scss\"",
    "format:ts": "biome check --write src/ts/",
    "format:all": "run-p format:scss format:ts",
    "min:css": "cleancss -o dist/assets/css/style.css dist/assets/css/style.css",
    "delete:map": "rimraf -g dist/**/*.map",
    "clean": "rimraf dist",
    "predev": "npm run clean"
  },
  "volta": {
    "node": "22.11.0",
    "npm": "10.9.0"
  },
  "browserslist": [
    "> 0.2%, not dead",
    "> 0.2% in JP, not dead",
    "not ios < 15",
    "safari > 15, ios > 15"
  ],
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@rspack/cli": "^1.3.12",
    "@rspack/core": "^1.3.12",
    "@types/node": "^22.10.2",
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "clean-css-cli": "^5.6.3",
    "ejs-cli": "^2.2.3",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-sort-media-queries": "^5.2.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "sass": "^1.86.3",
    "stylelint": "^16.18.0",
    "stylelint-config-recess-order": "^6.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^5.0.3",
    "typescript": "^5.8.3"
  }
}
