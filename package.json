{
  "name": "template-static-site",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "run-p watch:ejs watch:ts",
    "build": "run-s clean compile:ejs compile:ts",
    "compile:ejs": "ejs-cli -b src/templates/ \"/**/*.ejs\" -o dist/ -e src/templates/include",
    "watch:ejs": "chokidar \"src/templates/\" -c \"npm run compile:ejs\" --initial",
    "compile:ts": "rspack build --mode=production",
    "watch:ts": "rspack dev",
    "format:scss": "stylelint --fix \"**/*.scss\"",
    "format:ts": "biome check --write src/ts/",
    "format:all": "run-p format:scss format:ts",
    "clean": "rimraf dist",
    "predev": "npm run clean"
  },
  "volta": {
    "node": "22.11.0",
    "npm": "10.9.0"
  },
  "browserslist": [
    "> 0.2%, not dead",
    "> 0.2% in JP, not dead",
    "not ios < 15",
    "safari > 15, ios > 15"
  ],
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@rspack/cli": "^1.3.12",
    "@rspack/core": "^1.3.12",
    "@types/node": "^22.10.2",
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "ejs-cli": "^2.2.3",
    "npm-run-all2": "^8.0.4",
    "postcss-loader": "^8.1.1",
    "postcss-sort-media-queries": "^5.2.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "sass-loader": "^16.0.5",
    "stylelint": "^16.18.0",
    "stylelint-config-recess-order": "^6.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^5.0.3",
    "typescript": "^5.8.3"
  }
}
